# Backend Configuration
PREFERRED_BACKEND=cogvideox  # cogvideox, opensora, or mochi
LOW_VRAM=false              # Set to true to force low-VRAM mode (uses CogVideoX-2B)

# Default Generation Settings
DEFAULT_FPS=24
DEFAULT_FRAMES=64
DEFAULT_WIDTH=720
DEFAULT_HEIGHT=720

# Device Configuration
DEVICE=cuda                 # cuda or cpu
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR

# Paths (relative to project root)
WEIGHTS_DIR=./weights
OUTPUTS_DIR=./outputs
LOGS_DIR=./logs

# Server Configuration
HOST=0.0.0.0
PORT=8765  # Non-common port to avoid conflicts
